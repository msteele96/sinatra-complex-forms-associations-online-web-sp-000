<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">

<label>Pet's Name:</label>
<br>
<input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name">
<br><br>

<h3>Select an existing owner:</h3>
<% Owner.all.each do |owner| %>
  <input type="radio" name="pet[owner_id]" id="<%= owner.id%>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input><br>
<% end %>

<h3>Or create a new one:</h3>
<label for="owner_name">Name: </label>
<input type="text" name="owner[name]" id="owner_name">
<br><br>


<input id="hidden" type="hidden" name="_method" value="patch">
<input type="submit" value="Update Pet">
</form>


